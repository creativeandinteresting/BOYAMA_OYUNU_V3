{
  "expo": {
    "name": "Çocuk Boyama Oyunu",
    "slug": "cocuk-boyama-oyunu",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "boyama-oyunu",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "description": "Çocuklar için eğlenceli boyama oyunu. Hayvanlar, araçlar ve doğa temalı boyama sayfaları ile yaratıcılığınızı geliştirin!",
    "keywords": ["boyama", "çocuk", "oyun", "eğitim", "yaratıcılık", "sanat"],
    "primaryColor": "#FF6B9D",
    "backgroundColor": "#FFF5F5",
    "privacy": "public",
    "platforms": ["android", "ios"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.boyamaoyunu.cocuk",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "Bu uygulama fotoğraf çekip galeri özelliği için kameraya erişim gerektirir.",
        "NSPhotoLibraryUsageDescription": "Bu uygulama eserlerinizi galeriye kaydetmek için fotoğraf kitaplığına erişim gerektirir.",
        "NSMicrophoneUsageDescription": "Bu uygulama ses efektleri için mikrofona erişim gerektirir."
      }
    },
    "android": {
      "package": "com.boyamaoyunu.cocuk",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FF6B9D"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "CAMERA",
        "RECORD_AUDIO"
      ],
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.boyamaoyunu.cocuk"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
